<%- include("../partials/header") %>
    <div class="row">
        <div class="col-md-4">
            <h1><%= user.firstName + " " + user.lastName%></h1>
            <div>
            
                <img   src="<%= user.avatar%>" alt="Avatar" class="avatar">
                <div class="caption"><a href="mailto:<%= user.email %>"><%= user.email %></a></div>
                <% if( !member && currentUser.id != user._id){ %>
                    <a href="/follow/<%= user._id %>" class="btn btn-primary"> follow </a>
                <% } %>
                <h3>
                    <span style="color: teal;">Followers</span>: <b><%= user.followers.length%></b>
                    <span style="color: teal;"> Following: </span> <b><%= user.following.length%></b>
                </h3>

                
                <p>
                    <a  class="btn btn-primary" href="/campgrounds/new">Upload a new Post!!</a>
    
                </p>
            </div>
        </div>
        <div class="col-md-8">
            
            <h3><%= user.username %>'s campgrounds</h3>
            <ul>
                <% camps.forEach(camp => { %>
                    <li><a href="/campgrounds/<%= camp.id %>"><%= camp.name %></a></li>
                <% }) %>
            </ul>
        </div>
    </div>
<%- include("../partials/footer") %>
