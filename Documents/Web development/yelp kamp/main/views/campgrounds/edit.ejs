<%- include("../partials/header") %>



<div class="container">
    <div class="row">
        <h1 style="text-align: center;">Edit <%= camp.name%></h1>
        <div style="width: 30%; margin: 30px auto;">
        
            <form  action="/campgrounds/<%= camp._id%>?_method=PUT" method="post" enctype="multipart/form-data">
                <div class="form-group"><input class="form-control" type="text" name="name"  value="<%=camp.name%>"></div>
                <select class="js-example-basic-multiple" style="width:100%;" name="category">
                    
                    
                    
                    
                    <% cat.forEach(e=>{ %>
                        <option ><%=e.type%></option>
                    
                    <% }); %>
                  </select>
                <div class="form-group">
                    <label for="image">Image</label>
                    <input type="file" id="image" name="image" accept="image/*">
                </div>
                <div class="form-group"><input type="text" name="description"  class="form-control" value="<%=camp.description%>"></div>
                <div class="form-group"><textarea name="markdown" class="form-control" value="<%=camp.markdown%>"></textarea></div>
                <div class="form-group"><button class="btn btn-lg btn-primary btn-block" type="submit">submit</button></div>
                
            </form>
            <a href="/campgrounds">Go back</a>
        </div>

    
    </div>
</div>
<script type="text/javascript">
    $(document).ready(function() {
        $('.js-example-basic-multiple').select2({
            tags:true
        });
});
</script>
<%- include("../partials/footer") %>