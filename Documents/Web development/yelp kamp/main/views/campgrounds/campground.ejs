
<%- include("../partials/header") %>

    

    
        

        
                
                
        
                
            

        <div class="row text-center" style="display: flex; flex-wrap: wrap;">
            
            <% if(camps.length < 1){ %>
                <div class="col-lg-12"> 
                    <h1>Sorry Could'nt find anything &#128532;</h1>
                </div>
            <% }else {%> 
                <% camps.forEach(c=>{ %>
                    
                    <div class="col-xs-12">
                    <div class="media">
                        <div class="media-left">
                          <a href="/campgrounds/<%= c._id %>" >
                            <img class="media-object" src="<%= c.image%>" alt="..." style="vertical-align: middle; width: 50px; height: 50px;">
                          </a>
                        </div>
                        <div class="media-body text-left">
                            <a href="/campgrounds/<%= c._id %>" style="text-decoration: none; color: black;">
                                <blockquote >
                                    <h4 class="media-heading"><%= c.name %></h4>
                                    <p><%= c.description.substring(0,100); %></p>
                                    <footer>
                                        <em>Submitted by: <a href="/user/<%= c.author.id %>"><%= c.author.username %></a>
                                    </footer>
                                </blockquote>
                            </a>
                    
                          
                        </div>
                      </div>
                    </div>
        
                <% }); %>
            <% }%>
        </div>
        

<%- include("../partials/footer") %>